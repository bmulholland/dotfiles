export EDITOR=nvim

export PATH="/usr/local/sbin:$PATH"

# Show tmux window titles in tmux tabs
export DISABLE_AUTO_TITLE=true

# Homebrew on Apple Silicon is installed in a non-path location
if [[ $OSTYPE == darwin* && $CPUTYPE == arm64 ]]; then
  export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
fi

# Use dynamic PostgreSQL path detection
export PATH="$(brew --prefix postgresql@17)/bin:$PATH"

# Disable history for sensitive commands
export HISTIGNORE="*secret*:*password*:*token*:aws configure*"
