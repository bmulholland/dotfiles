root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_size = 2

[*.{rb,ruby}]
indent_size = 2

[*.{lua}]
indent_size = 2

[*.{toml,yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{conf,config}]
indent_size = 2

[{bashrc,zshrc,zprofile,pryrc,gemrc}]
indent_size = 2